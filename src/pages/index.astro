---
import Hero from "@/components/sections/Hero.astro";
import MainLayout from "../layouts/MainLayout.astro";
import About from "@/components/sections/About.astro";
import Sponsors from "@/components/sections/Sponsors.astro";
import FAQS from "@/components/sections/FAQS.astro";
import Team from "@/components/sections/Teams.astro";
---

<MainLayout>
  <Hero
    className="section-layout-center"
    data-bg-color="#b1f1ff"
    id="heroSection"
  />

  <About
    className="section-layout-left"
    data-bg-color="#ffb1b1"
    id="aboutSection"
  />

  <Sponsors
    className="section-layout-right"
    data-bg-color="#b1ffb1"
    id="sponsorSection"
  />

  <FAQS
    className="section-layout-left"
    data-bg-color="#ffb1ff"
    id="faqsSection"
  />

  <Team
    className="section-layout-right"
    data-bg-color="#b1b1ff"
    id="teamsSection"
  />
</MainLayout>
