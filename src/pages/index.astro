---
import Hero from "@/components/sections/Hero.astro";
import MainLayout from "../layouts/MainLayout.astro";
import About from "@/components/sections/About.astro";
import Sponsors from "@/components/sections/Sponsors.astro";
import FAQS from "@/components/sections/FAQS.astro";
import Team from "@/components/sections/Teams.astro";
---

<MainLayout>
  <div class="absolute -left-80 bottom-44 z-10 w-80">
    <img
      src="hero-beaver-sledge.svg"
      alt="Beaver on a sledge"
      id="sledge"
      width="320"
      height="320"
      style="width: 100%; height: auto; opacity: 0;"
    />
  </div>

  <Hero className="section-layout-center" id="heroSection" />

  <About className="section-layout-left" id="aboutSection" />

  <Sponsors className="section-layout-right" id="sponsorSection" />

  <FAQS className="section-layout-left" id="faqsSection" />

  <Team className="section-layout-right" id="teamsSection" />
</MainLayout>
