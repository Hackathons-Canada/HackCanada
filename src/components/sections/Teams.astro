---
import SectionWrapper from "@/components/layout/SectionWrapper.astro";
import SectionHeading from "@/components/utility/SectionHeading.astro";
import { teams } from "@/config/teams";
import { cn } from "@/lib/utils";

interface Props {
  className?: string;
  id?: string;
}

const { className, id } = Astro.props;

const getContainerWidth = (memberCount: number): string => {
  const widths = {
    13: "1000px",
    12: "950px",
    11: "900px",
    10: "800px",
    9: "750px",
    8: "650px",
    7: "650px",
    6: "550px",
    5: "550px",
    4: "550px",
    3: "550px",
  };
  return widths[memberCount as keyof typeof widths] || "550px";
};

const getCompartmentSizes = (memberCount: number): [number, number] => {
  const sizes: { [key: number]: [number, number] } = {
    13: [5, 8],
    12: [5, 7],
    11: [4, 7],
    10: [4, 6],
    9: [3, 6],
    8: [3, 5],
    7: [2, 5],
    6: [2, 4],
    5: [1, 4],
    4: [0, 4],
    3: [0, 3],
  };
  return sizes[memberCount] || [0, memberCount];
};

// Function to check if an image exists
const imageExists = async (url: string) => {
  try {
    const response = await fetch(url);
    if (response.ok) {
      const blob = await response.blob();
      return blob.size > 0;
    }
    return false;
  } catch {
    return false;
  }
};
---

<SectionWrapper
  id={id}
  className={cn("relative flex flex-col overflow-hidden px-5", className)}
>
  <SectionHeading className="team-heading text-center"
    >Meet Our Team</SectionHeading
  >

  <div class="team-container absolute bottom-0 left-0 h-fit w-full">
    <div class="boat-container relative flex h-[150px] w-full gap-10">
      {
        teams.map((team, index) => {
          const memberCount = team.teamMembers.length;
          const [compartment1Count, compartment2Count] =
            getCompartmentSizes(memberCount);
          const containerWidth = getContainerWidth(memberCount);
          const isCompartment1Visible = compartment1Count > 0;
          const shouldDisplayBoat = memberCount >= 3;

          return (
            shouldDisplayBoat && (
              <div
                class="boat relative h-0 shrink-0 rounded border-l-[80px] border-r-[50px] border-t-[100px] border-l-transparent border-r-transparent border-t-amber-700"
                style={`width: ${containerWidth}; min-width: 550px; max-width: 1000px;`}
                data-index={index}
                aria-hidden="true"
              >
                {isCompartment1Visible && (
                  <div class="compartment-1-group absolute -top-[300px] right-[25px] h-10 w-[calc(70%)] border-b-[100px] border-l-[80px] border-r-[40px] border-b-[#bfd2de] border-l-transparent border-r-transparent">
                    <div class="compartment-1">
                      {team.teamMembers
                        .slice(0, compartment1Count)
                        .map(async (member, index) => (
                          <div
                            class="team-member-1 border-1 absolute h-[80px] w-[80px] overflow-hidden rounded-full border border-amber-800 border-b-transparent"
                            style={`left: ${index * 90}px; top: 33px;`}
                          >
                            <img
                              src={
                                (await imageExists(member.image))
                                  ? member.image
                                  : "/teamAvatars/default-avatar.webp"
                              }
                              alt={`${member.name}'s avatar`}
                              width={80}
                              height={80}
                              class="h-full w-full object-cover"
                            />
                          </div>
                        ))}
                    </div>
                    <div class="compartment-1-divider absolute -top-[0px] right-[0px] h-px w-full bg-amber-600" />
                  </div>
                )}

                <div class="compartment-2-group absolute -right-[20px] -top-[200px] h-0 w-[calc(80%+140px)] border-b-[100px] border-l-[80px] border-r-[40px] border-b-[#bfd2de] border-l-transparent border-r-transparent">
                  <div class="compartment-2">
                    {team.teamMembers
                      .slice(-compartment2Count)
                      .map(async (member, index) => (
                        <div
                          class="team-member-2 border-1 absolute h-[80px] w-[80px] overflow-hidden rounded-full border border-amber-800"
                          style={`left: ${index * 90}px; top: 20px;`}
                        >
                          <img
                            src={
                              (await imageExists(member.image))
                                ? member.image
                                : "/teamAvatars/default-avatar.webp"
                            }
                            alt={`${member.name}'s avatar`}
                            width={80}
                            height={80}
                            class="h-full w-full object-cover"
                            loading="lazy"
                          />
                        </div>
                      ))}
                  </div>
                  <div class="compartment-2-divider absolute right-[0px] top-[0px] h-px w-full bg-amber-600" />
                </div>
                <div
                  class="flag-container absolute"
                  style={`top: ${isCompartment1Visible ? -400 : -300}px; right: ${isCompartment1Visible ? 75 : 50}px;`}
                >
                  <div class="flag-wrapper absolute -left-[0px] top-2 flex h-[60px] w-[100px] items-center justify-center overflow-hidden">
                    <div class="flag relative h-[75px] w-[150px] bg-white shadow-md">
                      <div class="flag-left-bar absolute left-0 top-0 h-full w-1/4 bg-red-600" />
                      <div class="flag-right-bar absolute right-0 top-0 h-full w-1/4 bg-red-600" />
                      <div class="flag-center absolute left-1/4 top-0 flex h-full w-1/2 items-center justify-center">
                        <span class="team-name px-1 text-center text-sm font-bold text-red-600">
                          {team.teamName}
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="flagpole h-[100px] w-2 rounded-t-full bg-gradient-to-b from-amber-700 to-amber-900" />
                </div>

                <div class="boat-base absolute -left-[85px] -top-[115px] h-5 w-[calc(100%+140px)] rounded-xl bg-amber-600" />

                {[75, 50, 25].map((offset, index) => (
                  <div
                    class={`water-line absolute h-px bg-gradient-to-r from-transparent via-black to-transparent`}
                    style={`top: -${offset}px; left: ${10 * index}px; width: ${100 - 10 * index}%;`}
                  />
                ))}
              </div>
            )
          );
        })
      }
    </div>
  </div>
</SectionWrapper>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);
  function infiniteScroll() {
    const boatContainer = document.querySelector(
      ".boat-container",
    ) as HTMLElement;
    if (!boatContainer) return; // Exit if boatContainer is null

    const boats = boatContainer.querySelectorAll(".boat");
    const totalWidth = Array.from(boats).reduce(
      (acc, boat) => acc + (boat as HTMLElement).offsetWidth,
      0,
    );

    // Clone boats and append to the container for seamless looping
    boats.forEach((boat) => {
      const clone = boat.cloneNode(true) as HTMLElement;
      boatContainer.appendChild(clone);
    });

    // Set initial position to the right
    gsap.set(boatContainer, { x: window.innerWidth });

    // Create the animation
    const tl = gsap.timeline({ repeat: -1 });

    tl.to(boatContainer, {
      x: -(totalWidth + 50),
      duration: 30, // Adjust this value to control the speed
      ease: "none",
    });

    // When the animation completes, immediately reset to the starting position
    tl.set(boatContainer, { x: window.innerWidth }, "+=0.01");
  }
  function animateTeams() {
    const boats = document.querySelectorAll(".boat");

    boats.forEach((boat) => {
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: boat,
          start: "top bottom-=50",
          end: "bottom top",
          toggleActions: "play none none reverse",
          markers: true,
        },
      });

      // Animate the boat
      tl.from(boat, {
        scaleY: 0,
        transformOrigin: "center",
        duration: 0.5,
        ease: "power2.out",
      });

      // Animate the compartments
      const compartment2Group = boat.querySelector(".compartment-2-group");
      const compartment1Group = boat.querySelector(".compartment-1-group");

      // Animate compartment 2 group first
      tl.from(compartment2Group, {
        scaleY: 0,
        transformOrigin: "bottom",
        duration: 0.5,
        ease: "back.out(1.7)",
      });

      // Then animate compartment 1 group if it exists
      if (compartment1Group) {
        tl.from(
          compartment1Group,
          {
            scaleY: 0,
            transformOrigin: "bottom",
            duration: 0.5,
            ease: "back.out(1.7)",
          },
          "-=0.3",
        ); // Slight overlap for a smoother transition
      }

      // Animate team members
      const members = boat.querySelectorAll(".team-member-1, .team-member-2");
      tl.from(
        members,
        {
          scale: 0,
          y: 50,
          stagger: 0.1,
          duration: 0.5,
          ease: "back.out(1.7)",
        },
        "-=0.5",
      );

      // Animate the flag
      const flag = boat.querySelector(".flag");
      tl.from(
        flag,
        {
          y: -50,
          opacity: 0,
          duration: 0.5,
          ease: "back.out(1.7)",
        },
        "-=0.3",
      );

      // Animate the flagpole
      const flagpole = boat.querySelector(".flagpole");
      tl.from(
        flagpole,
        {
          scaleY: 0,
          transformOrigin: "bottom",
          duration: 0.3,
          ease: "power2.out",
        },
        "-=0.5",
      );

      // Water lines animation removed as it might interfere with the marquee effect
    });

    // Animate section heading
    gsap.from(".team-heading", {
      y: 50,
      opacity: 0,
      duration: 1,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".team-heading",
        start: "top bottom-=100",
        end: "bottom top",
        toggleActions: "play none none reverse",
      },
    });

    // Set up the marquee animation
    // setupMarquee();
  }

  // Run the animation when the DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    animateTeams();
    infiniteScroll();
  });
</script>
