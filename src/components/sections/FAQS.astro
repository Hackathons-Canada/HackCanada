---
import SectionWrapper from "@/components/layout/SectionWrapper.astro";
import { cn } from "@/lib/utils";
import faqs from "@/config/faqs";
import { Image } from "astro:assets";
import FaqContent from "../FAQ/FaqContent.astro";

interface Props {
  className?: string;
  id?: string;
}

const { className, id } = Astro.props;
---

<SectionWrapper id={id} className={cn("relative py-20 md:py-32", className)}>
  <h2
    class="mb-8 text-center font-baloo text-4xl font-black text-[#870A0A] md:mb-12 md:text-5xl xl:mb-16 xl:text-6xl"
  >
    Frequently Asked Questions
  </h2>

  <div
    class="faq-categories mx-auto grid max-w-screen-2xl grid-cols-1 items-start justify-start gap-12 xl:grid-cols-2"
  >
    <div class="flex flex-col gap-12">
      {faqs.slice(0, 2).map((category) => <FaqContent category={category} />)}
    </div>
    <div class="flex flex-col gap-12">
      {faqs.slice(2, 4).map((category) => <FaqContent category={category} />)}
    </div>
  </div>

  <Image
    src="/beaver-sitting.webp"
    alt="Beaver sitting"
    width={320}
    height={320}
    class="absolute bottom-0 left-20 z-50"
  />
</SectionWrapper>
