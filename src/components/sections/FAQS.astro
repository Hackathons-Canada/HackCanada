---
import SectionWrapper from "@/components/layout/SectionWrapper.astro";
import { cn } from "@/lib/utils";
import faqs from "@/config/faqs";
import { Image } from "astro:assets";
import FaqCategory from "../FAQ/FaqCategory.astro";

interface Props {
  className?: string;
  id?: string;
}

const { className, id } = Astro.props;
---

<SectionWrapper
  id={id}
  className={cn(
    "relative z-10 overflow-hidden pb-32 pt-20 md:pb-[900px] md:pt-32",
    className,
  )}
>
  <!-- Assets -->
  <div
    class="pointer-events-none absolute inset-x-0 bottom-0 h-fit select-none"
  >
    <!-- Grass background -->
    <Image
      src="/grass.webp"
      alt={"Grass"}
      width={1}
      height={1}
      class="absolute inset-x-0 bottom-0 h-80 w-full object-cover xl:h-[600px]"
    />

    <!-- Grass and dandelions -->
    <Image
      src="/grass-top.png"
      alt="Grass top"
      width={1}
      height={1}
      class="absolute bottom-[450px] left-1/2 w-[60%] -translate-x-1/2 object-contain"
    />
    <Image
      src="/dandelion-1.png"
      alt="Dandelion 1"
      width={1}
      height={1}
      class="absolute bottom-[500px] left-[70%] w-40 -translate-x-1/2 object-contain"
    />
    <Image
      src="/dandelion-2.png"
      alt="Dandelion 2"
      width={1}
      height={1}
      class="absolute bottom-[500px] left-[80%] w-36 -translate-x-1/2 object-contain"
    />
    <Image
      src="/dandelion-3.png"
      alt="Dandelion 2"
      width={1}
      height={1}
      class="absolute bottom-[510px] left-[50%] w-32 -translate-x-1/2 object-contain"
    />

    <!-- Dandelion tips -->
    <Image
      src="/dandelion-tip.png"
      alt="Dandelion tip"
      width={1}
      height={1}
      class="absolute bottom-[600px] left-[60%] w-12 -translate-x-1/2 object-contain"
    />

    <!-- Beaver -->
    <Image
      src="/beaver-sitting.png"
      alt="Beaver sitting"
      width={1}
      height={1}
      class="absolute bottom-0 w-[75%] xl:bottom-[400px] xl:left-40 2xl:w-[1100px]"
    />
    <Image
      src="/dandelion-wind.png"
      alt="Dandelion wind"
      width={1}
      height={1}
      class="absolute bottom-[520px] left-[470px] xl:w-[350px]"
    />
  </div>

  <h2
    class="mb-16 text-center font-baloo text-4xl font-black text-[#870A0A] md:mb-20 md:text-5xl xl:mb-28 xl:text-6xl"
  >
    Frequently Asked Questions
  </h2>

  <div
    class="faq-categories mx-auto grid max-w-screen-2xl grid-cols-1 items-start justify-start gap-12 px-4 xl:grid-cols-2"
  >
    <div class="flex flex-col gap-12">
      {faqs.slice(0, 2).map((category) => <FaqCategory category={category} />)}
    </div>
    <div class="flex flex-col gap-12">
      {faqs.slice(2, 4).map((category) => <FaqCategory category={category} />)}
    </div>
  </div>
</SectionWrapper>
