---
import { socialLinks } from "@/config/links";
import IconButton from "@/components/utility/icons/IconButton.astro";
---

<ul class="flex items-center gap-6 md:gap-6">
  {
    socialLinks.map((item) => (
      <li class="group relative p-2.5">
        <span class="absolute inset-0 scale-y-50 rounded-full bg-black/50 opacity-0 transition group-hover:scale-y-100 group-hover:opacity-100" />
        <IconButton
          item={item}
          size={24}
          class:list="relative text-slate-600 hover:scale-110"
          iconClasses="size-5 xl:size-6 hover:scale-110"
        />
      </li>
    ))
  }
</ul>
