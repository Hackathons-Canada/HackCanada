---
import { Image } from "astro:assets";
import { cn } from "@/lib/utils";
import {
  footerLinksRow2,
  footerLinksRow1,
  socialLinks,
} from "@/config/layoutConfig";

interface Props {
  className?: string;
}

const { className } = Astro.props;
const year = new Date().getFullYear();
---

<footer
  class={cn(
    "bg-gradient-to-b lg:pt-20 from-[#32BAFA] to-[#aad6fa] text-[#0a1c3d] w-full px-4 sm:px-6 py-8 sm:py-10",
    className,
  )}
>
  <div class="mx-auto max-w-7xl">
    <div
      class="flex flex-col items-center gap-8 sm:flex-row sm:items-start sm:justify-between"
    >
      <div
        class="flex flex-col items-center space-y-4 sm:flex-row sm:space-x-6 sm:space-y-0"
      >
        <Image
          src="/favicon.svg"
          alt="Hack Canada logo"
          width={72}
          height={72}
          class="h-18 w-18 animate-float select-none object-contain"
        />
        <div class="text-center sm:text-left">
          <h2
            class="text-2xl font-bold transition-colors duration-300 hover:text-[#051429] sm:text-3xl"
          >
            Hack Canada
          </h2>
          <p
            class="mt-1 text-base text-[#0a1c3d] transition-opacity duration-300 hover:opacity-80 sm:text-lg"
          >
            Powered by Hackathons Canada
          </p>
        </div>
      </div>
      <nav class="w-full sm:w-auto">
        <ul
          class="mb-4 flex flex-wrap justify-center gap-4 text-lg sm:justify-end sm:gap-x-8"
        >
          {
            footerLinksRow1.map((link) => (
              <li>
                <span
                  class="cursor-not-allowed text-[#0a1c3d] opacity-70 transition-opacity duration-300 hover:opacity-50"
                  aria-disabled="true"
                >
                  {link.label}
                </span>
              </li>
            ))
          }
        </ul>
        <ul
          class="flex flex-wrap justify-center gap-4 text-lg sm:justify-end sm:gap-x-8"
        >
          {
            footerLinksRow2.map((link) => (
              <li>
                <a
                  class="text-[#0a1c3d] transition-all duration-300 hover:text-[#051429] hover:underline"
                  href={link.href}
                  target={link.blank ? "_blank" : "_self"}
                  rel={link.blank ? "noopener noreferrer" : null}
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
    <div
      class="mt-8 flex flex-col items-center gap-6 pt-6 sm:mt-10 sm:flex-row sm:justify-between"
    >
      <p
        class="text-center text-base text-[#0a1c3d] transition-opacity duration-300 hover:opacity-80 sm:text-left"
      >
        Â© {year} Hack Canada. All rights reserved.
      </p>
      <div class="flex items-center space-x-6">
        {
          socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Follow us on ${link.label}`}
              class="text-[#0a1c3d] transition-transform duration-300 hover:scale-110 hover:text-[#051429]"
            >
              <span set:html={link.icon({ size: 35, color: "#0a1c3d" })} />
            </a>
          ))
        }
      </div>
      <a
        href="https://hackathonscanada.com"
        target="_blank"
        rel="noopener noreferrer"
        class="group flex items-center space-x-3 text-[#0a1c3d] transition-all duration-300 hover:text-[#051429] hover:underline"
      >
        <Image
          src="/hackathons-canada-logo.webp"
          alt="Hackathons Canada logo"
          width={36}
          height={36}
          class="h-8 w-8 select-none object-contain transition-transform duration-300 group-hover:scale-110 sm:h-9 sm:w-9"
          loading="lazy"
          decoding="async"
          format="webp"
        />
        <span class="text-lg">A Hackathons Canada Initiative</span>
      </a>
    </div>
  </div>
</footer>

<style>
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
    100% {
      transform: translateY(0px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
