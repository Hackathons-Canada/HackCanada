---
import { Image } from "astro:assets";
import { cn } from "@/lib/utils";
import { Discord, Gmail, Instagram, Linkedin } from "simple-icons-astro";
import type { SocialLink } from "@/types";

interface Props {
  className?: string;
}

const { className } = Astro.props;
const year = new Date().getFullYear();

const socialLinks: SocialLink[] = [
  { href: "https://discord.gg/wp42amwcWy", icon: Discord, label: "Discord" },
  {
    href: "https://www.instagram.com/hackathoncanada/",
    icon: Instagram,
    label: "Instagram",
  },
  {
    href: "https://www.linkedin.com/company/hackathonscanada/",
    icon: Linkedin,
    label: "LinkedIn",
  },
  { href: "mailto:contact@hackcanada.org", icon: Gmail, label: "Email" },
];

const footerLinksRow1 = [
  { label: "Apply as a Mentor", href: "", disabled: true },
  { label: "Apply as a Judge", href: "", disabled: true },
];

const footerLinksRow2 = [
  { label: "Terms of Service", href: "" },
  { label: "Privacy Policy", href: "/privacy" },
  { label: "Contact Us", href: "mailto:contact@hackcanada.org", blank: true },
];
---

<footer
  class={cn(
    "bg-gradient-to-b from-[#32BAFA] to-[#aad6fa] text-[#112546] w-full px-4 sm:px-6 py-8 sm:py-10",
    className,
  )}
>
  <div class="mx-auto max-w-7xl">
    <div
      class="flex flex-col items-center justify-between gap-8 sm:flex-row sm:items-start"
    >
      <div
        class="flex flex-col items-center space-y-4 sm:flex-row sm:items-start sm:space-x-6 sm:space-y-0"
      >
        <Image
          src="/logo-v1.webp"
          alt="Hack Canada logo"
          width={72}
          height={72}
          class="h-18 w-18 object-contain"
        />
        <div class="text-center sm:text-left">
          <h2
            class="text-2xl font-bold leading-tight text-[#112546] sm:text-3xl"
          >
            Hack Canada
          </h2>
          <p class="mt-1 text-base text-[#1e3a6d] sm:text-lg">
            Powered by Hackathons Canada
          </p>
        </div>
      </div>

      <nav class="w-full sm:w-auto">
        <ul
          class="mb-4 flex flex-wrap justify-center gap-4 text-base sm:justify-end sm:gap-x-8 sm:gap-y-4 sm:text-lg"
        >
          {
            footerLinksRow1.map((item) => (
              <li>
                <span
                  class="cursor-not-allowed text-[#3a5280]"
                  aria-disabled="true"
                >
                  {item.label}
                </span>
              </li>
            ))
          }
        </ul>
        <ul
          class="flex flex-wrap justify-center gap-4 text-base sm:justify-end sm:gap-x-8 sm:gap-y-4 sm:text-lg"
        >
          {
            footerLinksRow2.map((item) => (
              <li>
                <a
                  class="text-[#112546] transition-colors duration-200 hover:text-[#0a1c3d] hover:underline"
                  href={item.href}
                  target={item.blank ? "_blank" : "_self"}
                  rel={item.blank ? "noopener noreferrer" : null}
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>

    <div
      class="mt-8 flex flex-col items-center justify-between gap-6 pt-6 sm:mt-10 sm:flex-row"
    >
      <p class="text-center text-sm text-[#1e3a6d] sm:text-left sm:text-base">
        Â© {year} Hack Canada. All rights reserved.
      </p>

      <div class="flex items-center space-x-6">
        {
          socialLinks.map((item) => (
            <a
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Follow us on ${item.label}`}
              class="text-[#1e3a6d] transition-colors duration-200 hover:text-[#0a1c3d]"
            >
              <item.icon size={28} class="sm:h-8 sm:w-8" />
            </a>
          ))
        }
      </div>

      <a
        href="https://hackathonscanada.com"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center space-x-3 text-[#112546] transition-colors duration-200 hover:text-[#0a1c3d] hover:underline"
      >
        <Image
          src="/hackathons-canada-logo.webp"
          alt="Hackathons Canada logo"
          width={36}
          height={36}
          class="h-8 w-8 object-contain sm:h-9 sm:w-9"
          loading="lazy"
          decoding="async"
          format="webp"
        />
        <span class="text-base sm:text-lg">A Hackathons Canada Initiative</span>
      </a>
    </div>
  </div>
</footer>
