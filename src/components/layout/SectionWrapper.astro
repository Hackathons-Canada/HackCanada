---
import { cn } from "@/lib/utils";

interface Props {
  className?: string;
  as?: string;
}

const { elementType = "section", className, ...rest } = Astro.props;
const SectionElement = elementType;
---

<SectionElement
  class={cn("sm:px-4 md:px-6 lg:px-16 w-full max-w-7xl", className)}
  {...rest}
>
  <slot />
</SectionElement>
