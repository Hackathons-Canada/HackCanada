---
import { cn } from "@/lib/utils";
const { className } = Astro.props;
---

<div
  class={cn(
    "prose max-w-none dark:prose-invert",
    "prose-headings:transition-colors prose-headings:duration-300",
    "prose-h1:mb-4 prose-h1:text-3xl prose-h1:font-bold prose-h1:text-primary",
    "prose-h2:mb-3 prose-h2:text-2xl prose-h2:font-semibold prose-h2:text-primary/90",
    "prose-h3:mb-2 prose-h3:text-xl prose-h3:font-medium prose-h3:text-primary/80",
    "prose-p:mb-4 prose-p:text-justify prose-p:leading-relaxed",
    "prose-a:text-blue-600 prose-a:no-underline prose-a:transition-all prose-a:duration-300 dark:prose-a:text-blue-400",
    "hover:prose-a:text-blue-800 hover:prose-a:underline dark:hover:prose-a:text-blue-300",
    "prose-strong:font-bold prose-strong:text-primary",
    "prose-ul:list-disc prose-ul:pl-5 prose-li:mb-2",
    "prose-ol:list-decimal prose-ol:pl-5 prose-li:mb-2",
    "prose-blockquote:border-l-4 prose-blockquote:border-primary/20 prose-blockquote:pl-4 prose-blockquote:italic",
    "prose-img:rounded-xl prose-img:shadow-md prose-img:transition-all prose-img:duration-300 hover:prose-img:shadow-lg",
    "prose-code:rounded prose-code:bg-secondary prose-code:px-1 prose-code:py-0.5",
    "prose-pre:rounded-lg prose-pre:bg-secondary prose-pre:p-4",
    "transition-all duration-300 ease-in-out",
    className,
  )}
>
  <slot />
</div>
