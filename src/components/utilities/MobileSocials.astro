---
import { socialLinks } from "@/config/links";
import IconButton from "@/components/common/IconButton.astro";
---

<ul
  class="socialContainer flex items-center justify-center gap-6 rounded-xl px-4 py-2"
>
  {
    socialLinks.map((link) => (
      <li class="shrink-0">
        <IconButton
          item={link}
          size={32}
          iconClasses="socialLink size-6 text-[#07152e] hover:scale-110"
        />
      </li>
    ))
  }
</ul>
