---
import Button from "@/components/common/Button.astro";
import NewsLetter from "@/components/NewsLetter.astro";
import { cn } from "@/lib/utils";

interface HeroSection {
  title: string;
  tagline: string;
  buttonText: string;
  buttonLink: string;
}

interface Props {
  heroSectionConfig: HeroSection;
  className?: string;
  buttonText?: string;
  buttonLink?: string;
}

const { heroSectionConfig, className, buttonText, buttonLink } = Astro.props;
const { title, tagline } = heroSectionConfig;
---

<div
  class={cn(
    "flex flex-col items-center justify-center md:items-end",
    className,
  )}
>
  <h1
    class="hero-heading heading-font animate-fade-up text-center text-7xl opacity-0 animation-delay-100 md:text-right md:text-8xl lg:text-8xl xl:text-[108px]"
  >
    {title}
  </h1>
  <p
    class="animate-fade-up text-center text-lg font-bold uppercase tracking-tighter opacity-0 animation-delay-300 md:text-right md:text-xl xl:text-2xl"
  >
    {tagline}
  </p>
  <div
    class="relative mt-8 w-auto animate-fade-up opacity-0 animation-delay-500"
  >
    <Button
      variant="hero"
      size="lg"
      link={buttonLink}
      class="group rounded-xl md:text-lg"
    >
      <span class="transition-[letter-spacing] group-hover:tracking-[0.125em]"
        >{buttonText}</span
      >
    </Button>
  </div>
</div>

<NewsLetter />
