---
import Button from "@/components/common/Button.astro";
import NewsLetter from "@/components/NewsLetter.astro";
import { cn } from "@/lib/utils";

interface HeroSection {
  title: string;
  tagline: string;
  buttonText: string;
  buttonLink: string;
}

interface Props {
  heroSectionConfig: HeroSection;
  className?: string;
}

const { heroSectionConfig, className } = Astro.props;
const { title, tagline, buttonText, buttonLink } = heroSectionConfig;
---

<div class={cn("flex flex-col items-center justify-center", className)}>
  <h1
    class="hero-heading heading-font animate-fade-up text-center text-7xl opacity-0 animation-delay-100 md:text-right md:text-8xl lg:text-8xl xl:text-[108px]"
  >
    {title}
  </h1>
  <p
    class="animate-fade-up text-center text-lg font-bold uppercase opacity-0 animation-delay-300 md:text-right md:text-xl xl:text-2xl"
  >
    {tagline}
  </p>
  <div class="mt-6 w-auto animate-fade-up opacity-0 animation-delay-500">
    <Button variant="hero" size="lg" link={buttonLink}>
      {buttonText}
    </Button>
  </div>
</div>

<NewsLetter />
