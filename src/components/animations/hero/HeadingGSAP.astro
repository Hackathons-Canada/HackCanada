---
import { Button } from "@/components/ui/button";
import { cn } from "@/lib/utils";

interface Props {
  title: string;
  tagline: string;
  className?: string;
}

const { title, tagline, className } = Astro.props;
---

<div
  class={cn(
    "flex flex-col items-center justify-center md:items-end space-y-4 ",
    className,
  )}
>
  <h1
    id="hero-heading"
    class="heading-animation hero-heading-text text-center text-6xl font-black text-[#0A1F44] md:text-right md:text-6xl lg:text-8xl"
  >
    {title}
  </h1>
  <p
    class="hero-tagline text-center text-lg font-black uppercase tracking-tighter text-[#485B7C] opacity-0 md:text-right"
  >
    {tagline}
  </p>
  <Button className="w-auto bg-[#0A1F44] hover:bg-[#0A1F44]/95"
    >Hacker Application</Button
  >
</div>

<script>
  import { gsap } from "gsap";

  function animateHeading() {
    const tl = gsap.timeline();

    tl.fromTo(
      ".heading-animation",
      { opacity: 0, y: 50 },
      { opacity: 1, y: 0, duration: 1, ease: "power3.out" },
    );

    tl.fromTo(
      ".hero-tagline",
      { opacity: 0, y: 20 },
      { opacity: 1, y: 0, duration: 0.8, ease: "power2.out" },
      "-=0.5",
    );
  }

  animateHeading();
</script>
