<div
  id="member-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50"
>
  <div class="w-full max-w-md rounded-lg bg-white p-6 shadow-xl">
    <h2 id="member-name" class="mb-4 text-2xl font-bold"></h2>
    <p id="member-role" class="mb-2"></p>
    <p id="member-bio" class="mb-4"></p>
    <button
      class="rounded bg-blue-500 px-4 py-2 text-white hover:bg-blue-600"
      id="close-member-details"
    >
      Close
    </button>
  </div>
</div>

<script>
  import { selectedMember, clearSelectedMember } from "@/stores/memberStore";
  import type { TeamMember } from "@/types/teams";

  const modal = document.getElementById("member-modal");
  const memberName = document.getElementById("member-name");
  const memberRole = document.getElementById("member-role");
  const memberBio = document.getElementById("member-bio");
  const closeButton = document.getElementById("close-member-details");

  function updateModal(member: TeamMember | null) {
    if (member && modal && memberName && memberRole && memberBio) {
      memberName.textContent = `${member.firstName} ${member.lastName || ""}`;
      memberRole.innerHTML = `<strong>Role:</strong> ${member.tag}`;
      memberBio.innerHTML = `<strong>Quote:</strong> ${member.quote}`;
      modal.classList.remove("hidden");
      modal.classList.add("flex");
      document.body.classList.add("overflow-hidden");
    } else if (modal) {
      modal.classList.add("hidden");
      modal.classList.remove("flex");
      document.body.classList.remove("overflow-hidden");
    }
  }

  selectedMember.subscribe(updateModal);

  if (closeButton) {
    closeButton.addEventListener("click", () => {
      clearSelectedMember();
    });
  }

  if (modal) {
    modal.addEventListener("click", (e) => {
      if (e.target === modal) {
        clearSelectedMember();
      }
    });
  }
</script>
