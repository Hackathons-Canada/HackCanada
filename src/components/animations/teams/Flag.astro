---
interface Props {
  teamName: string;
  isCompartment1Visible: boolean;
}

const { teamName, isCompartment1Visible } = Astro.props;
---

<div
  class="flag-container absolute transition-all duration-300 ease-in-out"
  style={`top: ${isCompartment1Visible ? -400 : -300}px; right: ${isCompartment1Visible ? 75 : 50}px;`}
>
  <div
    class="flag-wrapper flag absolute -left-[0px] top-2 flex h-[70px] w-[120px] flex-col items-center justify-center overflow-hidden rounded-lg bg-white text-red-900 shadow-md transition-transform duration-300 ease-in-out hover:scale-105"
  >
    <div class="absolute left-0 h-full w-5 bg-red-600"></div>
    <div class="absolute right-0 h-full w-5 bg-red-600"></div>
    <span
      class="z-10 mb-1 transition-transform duration-300 ease-in-out hover:scale-110"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="h-8 w-8 fill-red-600"
      >
        <path
          d="m373 359 112-96-20-10c-11-5-9-12-8-17l19-74-63 14c-8 2-11-1-12-4l-8-33s-46 55-56 64-15-3-13-11l22-127-32 17c-9 5-15 2-20-6L256 0l-38 76c-5 8-11 11-20 6l-32-17 22 127c2 8-3 20-13 11s-56-64-56-64l-8 33c-1 3-4 6-12 4l-63-14 19 74c1 5 3 12-8 17l-20 10 112 96c5 4 5 9 3 15s-22 31-22 31 108-12 114-9c7 2 12 2 14 18 1 17-4 98-4 98h24s-5-81-4-98c2-16 7-16 14-18 6-3 114 9 114 9s-20-25-22-31-2-11 3-15z"
        ></path>
      </svg>
    </span>
    <span
      class="z-10 text-sm font-semibold transition-all duration-300 ease-in-out hover:text-red-600"
      >{teamName}</span
    >
  </div>
  <div
    class="flagpole h-[100px] w-2 rounded-t-full bg-gradient-to-b from-amber-700 to-amber-900 transition-all duration-300 ease-in-out hover:h-[110px]"
  >
  </div>
</div>
