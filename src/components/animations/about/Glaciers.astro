<!-- sea -->
<div class="about-sea absolute bottom-0 left-0 h-72 w-full opacity-0">
  <div class="absolute inset-0 bg-gradient-to-b from-blue-400 to-[#aad6fa]">
  </div>
  <div
    class="absolute inset-x-0 top-0 h-3 bg-gradient-to-b from-[#aad6fa] to-transparent backdrop-blur-md"
  >
  </div>
</div>

<!-- Glaciers -->
<div
  class="about-glacier-1 absolute -bottom-4 -right-32 w-[100%] max-w-[800px] opacity-0 md:w-full"
>
  <img src="about/Scene.svg" alt="" class="h-auto w-full" />
</div>

<div
  class="about-glacier-2 1g:left-0 absolute -bottom-7 -left-48 w-[70%] max-w-72 opacity-0 md:max-w-96"
>
  <img src="about/glacier2.svg" alt="" class="h-auto w-full" />
</div>

<script>
  import { initGsapFade, initGsapPopup } from "@/lib/gsapAnimations";

  // Animate the sea
  initGsapFade(".about-sea", {
    direction: "up",
    duration: 1.5,
    distance: 100,
    delay: 0.2,
    start: "top bottom",
  });

  // Animate the first glacier
  initGsapPopup(".about-glacier-1", {
    y: 100,
    duration: 1,
    delay: 0.5,
    start: "top bottom-=50",
    animateEachTime: true,
  });

  // Animate the second glacier
  initGsapPopup(".about-glacier-2", {
    y: 100,
    duration: 1,
    delay: 1,
    start: "top bottom-=50",
    animateEachTime: true,
  });
</script>
