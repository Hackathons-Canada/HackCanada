---
import { cn } from "@/lib/utils";

interface Props {
  className?: string;
  as?: string;
}

const { as = "section", className, ...rest } = Astro.props;
const Tag = as;
---

<Tag class={cn("sm:px-4 md:px-6 lg:px-16", className)} {...rest}>
  <div class="mx-auto w-full max-w-7xl">
    <slot />
  </div>
</Tag>
